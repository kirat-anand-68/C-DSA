### 2  DIMENSIONAL ARRAY
# two dimensional array are used to perform  the  operations on the columnd and the rows
import numpy as np
two_D_array =np.array([[11,15,10,6],[10,14,11,5],[12,17,12,8],[15,18,14,9]])
print(two_D_array)

## insertion
# time complexity is o(mn)
new2_array=np.insert(two_D_array,0,[[1,2,3,4]],axis=1)
print(new2_array)## axis =1 termed as the columns
new2_array=np.append(two_D_array,[[1,2,3,4]],axis=0)
print(new2_array)

## ACCESSING THE ELEMENT IN 2-D ARRAY
## i represent the row index and the j represent the column index
def accessElements(array,rowIndex,colIndex):
    if rowIndex >= len(array) and colIndex>=len(array[0]):##   0(1)
        print("Incorrect Index")##    0(1)
    else:
        print(array[rowIndex][colIndex])##     0(1)
accessElements(two_D_array,1,2)
##*******************TRAVERSAL 2-D ARRAY*********************
## len(array[0]) return the no. of columns
## len(array) return the no. of rows
def traverse2Darray(array):
    for i in range(len(array)):  ## o(mn)
        for j in range(len(array[0])): ##o(n)
            print(array[i][j])    ## O(1)
## space complexity 0(1)
traverse2Darray(two_D_array)

# seacrhing of element in the array
def search_2d_array(array,value):         ## space memory 0(1) as no extra memory id required for the genartion of 2-d matrix
    for i in range(len(array)):       ##0(mn)
        for j in range(len(array)):   ##0(n)
            if array[i][j]==value:    ## 0(1)
                return 'the value is located at index'+str(i)+" "+str(j)
    return 'the element is not found'

search_2d_array(two_D_array,14)

## DELETION OF 2D ARRAY
## it requires the 0(mn) as time and the 0(mn) as the space complexity for the array.

new_2d_array=np.delete(two_D_array,0,axis=0)
print(new_2d_array)
##***********************FOR 2D************************************ 
##                             T.C                S.C
## creating an empty array     0(1)               0(1)
## Creating                    0(mn)              0(mn)
##Inserting a value            0(mn)              0(mn)
#Traversing                    0(mn)              0(1)
#Accessing a given cell        0(1)               0(1)
#Seacrhing a value             0(mn)              0(1)
## Deleting a given value      0(mn)              0(mn)

